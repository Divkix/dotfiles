{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-opus-4-1-20250805",
  "theme": "system",
  "instructions": [
    "CLAUDE.md",
    "AGENTS.md"
  ],
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "mcp-sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-sequentialthinking-tools"
      ]
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--browser",
        "webkit",
        "--isolated"
      ]
    }
  },
  "formatter": {
    "prettier": {
      "disabled": false
    }
  }
}